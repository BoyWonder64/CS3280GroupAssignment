<Window x:Class="GroupAssignment.Main.wndMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupAssignment.Main"
        mc:Ignorable="d"
        Title="wndMain" Height="450" Width="800">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="10*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>

        <Canvas>

            <Menu x:Name="mnu_Menu">
                <MenuItem Header="Search" Height="31" Width="59" HorizontalAlignment="Center" Click="MenuItem_Search_Click"></MenuItem>
                <MenuItem Header="Edit Items" Height="31" Width="72" HorizontalAlignment="Center" Click="MenuItem_Edit_Click"></MenuItem>
            </Menu>

        </Canvas>
    </Grid>
</Window>
